<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.example.dao.NewsDAO">

	<select id="getNewsList" resultType="NewsVO">
	
		SELECT * FROM news
		ORDER BY rand()
		LIMIT #{start}, 8
	</select>
	
	<select id="getRecipe" resultType="RecipeVO">
	
		SELECT * FROM recipe
		WHERE recipeno = #{recipeno}
		
	</select>
	
	<!-- 레시피 토탈페이지 수 -->
	<select id="getTotalPage" resultType='int'>
		SELECT CEIL(count(*)/9) FROM recipe
	</select>
	
</mapper>
